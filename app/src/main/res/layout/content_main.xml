<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.fragment.app.FragmentContainerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/submit_question_answer_form_host"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.example.termproject.QuestionAnswerSubmission"
            tools:layout="@layout/fragment_question_answer_submission" />

        <androidx.fragment.app.FragmentContainerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/display_all_question_answer_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.example.termproject.QuestionAnswerDisplay"
            tools:layout="@layout/fragment_question_answer_display" />

        <Button
            android:id="@+id/start_tracking_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Start Tracking!" />

        <Button
            android:id="@+id/stop_tracking_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Stop Tracking!" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>